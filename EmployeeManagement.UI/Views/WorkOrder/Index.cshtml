@model IEnumerable<EmployeeManagement.Common.VModels.WorkOrderVM>


@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h3>
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            İş Emri Listesi
        </small>
    </h3>
</div>


<br />
<div class="col-6 text-left text-white">
    <a class="btn btn-success" asp-controller="WorkOrder" asp-action="Create">İş Emri Ekle</a>
</div>
<br />
<div class="row">
    <div class="col-xs-12">
        <table id="simple-table" class="table  table-bordered table-hover">
            <thead>
                <tr>
                    <th>İş Emri Numarası</th>
                    <th>Oluşturulma Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.WorkOrderNumber</td>
                            <td>@item.CreateDate.ToShortDateString()</td>
                            <td>
                                <div class="hidden-sm hidden-xs btn-group">
                                    @*<button class="btn btn-xs btn-info">
                                <i class="ace-icon fa fa-pencil bigger-120"></i>
                            </button>*@
                                    <a class="btn btn-xs btn-info" asp-controller="WorkOrder" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="ace-icon fa fa-pencil bigger-120"></i>
                                    </a>
                                    <a class="btn btn-xs btn-danger" id="btnRemove" data-id="@item.Id">
                                        <i class="ace-icon fa fa-trash bigger-120"></i>
                                    </a>
                                    <button class="btn btn-xs btn-warning">
                                        <i class="ace-icon fa fa-flag bigger-120"></i>
                                    </button>
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>Data Bulunamadı!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.span -->
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

